extends base

//- Sidebar mixin
mixin navItem(link, text, icon, active)
  li(class=`${active ? 'side-nav--active' : ''}`)
    a(href=`${link}`)
      svg
        use(xlink:href=`img/icons.svg#icon-${icon}`)
      | #{text}

block content
  main.main
    .user-view
      // Sidebar
      nav.user-view__menu
        ul.side-nav
          +navItem('/me', 'Settings', 'settings', activePage === 'settings')
          +navItem('/my-tours', 'My bookings', 'briefcase', activePage === 'bookings')
          +navItem('/account/reviews', 'My reviews', 'star', activePage === 'reviews')
          +navItem('/account/billing', 'Billing', 'credit-card', activePage === 'billing')

        - if (user.role === 'admin')
          .admin-nav
            h5.admin-nav__heading Admin
            ul.side-nav
              +navItem('/admin/manage-tours', 'Manage tours', 'map', activePage === 'manage-tours')
              +navItem('/admin/manage-users', 'Manage users', 'users', activePage === 'manage-users')
              +navItem('/admin/manage-reviews', 'Manage reviews', 'star', activePage === 'manage-reviews')
              +navItem('/admin/manage-bookings', 'Manage bookings', 'briefcase', activePage === 'manage-bookings')

      // Main content: Reviews cards
      .user-view__content
        h2.heading-secondary.ma-bt-md.admin-heading Your Bookings

        if reviews && reviews.length
          .review-cards
            each review in reviews
              .review-card
                .review-card__header
                  if review.tour && review.tour.imageCover
                    img.review-card__image(src=`/img/tours/${review.tour.imageCover}`, alt=`${review.tour.name}`)
                  h3.review-card__title= review.tour ? review.tour.name : 'Tour Deleted'
                  span.review-card__date= review.createdAt.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })
                .review-card__body
                  p
                    strong Rating: 
                    |  #{review.rating} / 5
                  p
                    strong Review: 
                    |  #{review.review}
        else
          p.no-reviews You have not submitted any reviews yet.
