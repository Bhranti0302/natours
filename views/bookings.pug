extends base

//- Sidebar mixin
mixin navItem(link, text, icon, active)
  li(class=`${active ? 'side-nav--active' : ''}`)
    a(href=`${link}`)
      svg
        use(xlink:href=`img/icons.svg#icon-${icon}`)
      | #{text}

block content
  main.main
    .user-view
      // Sidebar
      nav.user-view__menu
        ul.side-nav
          +navItem('/me', 'Settings', 'settings', activePage === 'settings')
          +navItem('/my-tours', 'My bookings', 'briefcase', activePage === 'bookings')
          +navItem('/account/reviews', 'My reviews', 'star', activePage === 'reviews')
          +navItem('/account/billing', 'Billing', 'credit-card', activePage === 'billing')

        - if (user.role === 'admin')
          .admin-nav
            h5.admin-nav__heading Admin
            ul.side-nav
              +navItem('/admin/manage-tours', 'Manage tours', 'map', activePage === 'manage-tours')
              +navItem('/admin/manage-users', 'Manage users', 'users', activePage === 'manage-users')
              +navItem('/admin/manage-reviews', 'Manage reviews', 'star', activePage === 'manage-reviews')
              +navItem('/admin/manage-bookings', 'Manage bookings', 'briefcase', activePage === 'manage-bookings')

      // Main content: Booking cards
      .user-view__content
        h2.heading-secondary.ma-bt-md.admin-heading Your Bookings

        if tours && tours.length
          .billing-cards.booking-cards 
            each tour in tours
              .billing-card.booking-card
                .billing-card__header
                  img.billing-card__image(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                 
                .billing-card__body
                  h3.billing-card__title= tour.name
                  span.billing-card__date= tour.startDates[0].toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })
                  p
                    strong Price: 
                    |  $#{tour.price}
                  p
                    strong Difficulty: 
                    |  #{tour.difficulty}
                  p
                    strong Duration: 
                    |  #{tour.duration}-day tour
                  a.btn.btn--green.booking-button(href=`/tour/${tour._id}`) View Details
        else
          p You have no bookings yet.
